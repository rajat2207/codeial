<h1>
    Home
</h1>

<section id="feed-posts">
    <h4>Post</h4>
    
    <% if(locals.user){ %> 
        <form action="/posts/create" id="new-post-form" method="POST" required>
            <textarea name="content" cols="30" rows="3" placeholder="Type Here..."></textarea>
            <button type="submit">Post</button>
        </form>
    <% } %> 

    <div id="posts-list-container">
        <ul>
            <% for(post of posts){ %>
                
                <%- include('_posts.ejs') -%> 

            <% } %>  
        </ul>
    </div>

</section>